<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.activity.comment.CommentActivity">

    <TextView
        android:id="@+id/comment_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Comments"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="5dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/comment_textView"
        android:layout_above="@id/comment_edit_text"
        android:layout_margin="5dp">

    </android.support.v7.widget.RecyclerView>
    <EditText
        android:id="@+id/comment_edit_text"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:padding="15dp"
        android:hint="Write a comment here..."
        android:inputType="textMultiLine"/>
    <ImageButton
        android:id="@+id/comment_post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/comment_edit_text"
        android:layout_alignParentEnd="true"
        android:src="@drawable/post_comment"
        android:padding="15dp"/>

</RelativeLayout>