<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.activity.userProfile.UserProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_profile_picture"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/my_profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_picture"
                android:text="Username"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/my_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_username"
                android:text="Hello there, here some text to fill this emptiness"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/my_profile_fav_drinks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_status"
                android:text="Favorite Drinks"
                android:textAlignment="center"
                android:layout_marginTop="60dp"
                android:textAllCaps="false"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_profile_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_fav_drinks"
                android:text="City"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:textAllCaps="false"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_city"
                android:text="Country"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:textAllCaps="false"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_profile_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_country"
                android:text="Day of Birth"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:textAllCaps="false"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/my_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profile_dob"
                android:text="Gender"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:textAllCaps="false"
                android:textSize="18sp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>